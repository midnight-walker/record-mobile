.layer{
  position: absolute;
  width: 100%;
  background: #fff;
  z-index: 1000;
  top:0;
  left:0;
  text-align: center;
  vertical-align: top;
  padding-bottom: 10px;
}
.layer .section__title,.layer picker,.layer button{
  display: inline-block;
}
.layer button{
  font-size: 14px;
  line-height: 1.5;
  position: relative;
  top:3px;
  left: 10px;
}