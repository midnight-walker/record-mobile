.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20px 0 40px;
  box-sizing: border-box;
} 

.bottom-nav{
  position: fixed;
  bottom: 0;
  height: 40px;
  z-index: 100;
  background: #fff;
  width: 100%;
  border-top:1px solid #eee;
}

.bottom-nav-item{
  width: 50%;
  font-size: 12px;
  display: inline-block;
  text-align: center;
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
}
.bottom-nav-item:hover,.bottom-nav-item:active{
  background: #09bb07;
  color: #fff;
}
.bottom-first{
  border-right: 1px solid #eee;
}



.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  position: relative;
}
.image-plus-nb{
  border: 0;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}


.image-upload{
  width: 100%;
  height: 90px;
  text-align: center;
}
.image-plus-nb{
  margin:0 auto;
}