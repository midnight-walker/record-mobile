}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20px 0 40px;
  box-sizing: border-box;
} 
.body-contener{
  padding: 20px 0 40px;
}

.bottom-nav{
  position: fixed;
  bottom: 0;
  height: 40px;
  z-index: 100;
  background: #fff;
  width: 100%;
  border-top:1px solid #eee;
}

.bottom-nav-item{
  width: 50%;
  font-size: 12px;
  display: inline-block;
  text-align: center;
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
}
.bottom-nav-item:hover,.bottom-nav-item:active{
  background: #09bb07;
  color: #fff;
}
.bottom-first{
  border-right: 1px solid #eee;
}



.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  position: relative;
}
.image-plus-nb{
  border: 0;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}


.image-upload{
  width: 100%;
  margin: 30px 0;
  text-align: center;
}
.image-plus-nb{
  margin:0 auto;
}



.supervisor-list-wrap{
  padding-bottom: 40px;
}
.supervisor-list-box{
  margin: 10px;
  padding: 10px;
  border-radius: 10px;
  border: 1px solid red;
  background: #eee;
  font-size:12px;
  position: relative;
}
.supervisor-list-box.active{
  border: 1px solid #09bb07;
}
.supervisor-list-box .close{
  position: absolute;
  top:-10px;
  right: -10px;
  width: 30px;
  height: 30px;
  border-radius: 30px;
  line-height: 30px;
  background: red;
  color: #fff;
  opacity: .8;
  text-align:center;
}
.supervisor-list-box.active .close{
  background: #09bb07;
}
.supervisor-list-box .line{
  line-height: 24px;
}
.supervisor-list-box span{
  display: inline-block;
  width: 45%;
  margin-right: 5%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.supervisor-list-box image{
  width: 100%;
}
.text-c{
  text-align: center;
}


page{
    background-color: #F8F8F8;
